{
  "name": "forgerock-web-login-framework",
  "version": "0.0.1",
  "scripts": {
    "dev": "npm run build:widget && npm run dev:widget | npm run dev:app",
    "dev:app": "svelte-kit dev --https",
    "dev:style": "postcss src/lib/widget/main.css --output package/widget.css --watch",
    "dev:widget": "rollup -c -w",
    "build": "npm run build:widget && npm run build:app",
    "build:app": "svelte-kit build",
    "build:widget": "rollup -c",
    "package": "svelte-kit package",
    "preview": "npm run build:widget && svelte-kit preview --https",
    "test": "vitest --dir src",
    "test:e2e": "playwright test",
    "test:storybook": "test-storybook",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "storybook": "start-storybook --no-open -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic --project-token=e10acf0c74f9 --force-rebuild"
  },
  "dependencies": {
    "@forgerock/javascript-sdk": "^3.2.2",
    "uuid": "^8.3.2",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@playwright/test": "^1.22.2",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@storybook/addon-a11y": "^6.5.5",
    "@storybook/addon-actions": "^6.5.3",
    "@storybook/addon-essentials": "^6.5.3",
    "@storybook/addon-interactions": "^6.5.3",
    "@storybook/addon-links": "^6.5.3",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-vite": "^0.1.35",
    "@storybook/jest": "^0.0.10",
    "@storybook/svelte": "^6.5.3",
    "@storybook/test-runner": "^0.1.1",
    "@storybook/testing-library": "^0.0.11",
    "@storybook/theming": "^6.5.9",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.44",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@vitest/ui": "^0.12.6",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.5",
    "chromatic": "^6.5.4",
    "color": "^4.2.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-storybook": "^0.5.12",
    "eslint-plugin-svelte3": "^3.2.1",
    "jest": "^27.5.1",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.4",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "7.0.2",
    "storybook-addon-code-editor": "^0.3.1",
    "storybook-dark-mode": "1.1.0",
    "svelte": "^3.48.0",
    "svelte-check": "^2.2.6",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.10.1",
    "svelte2tsx": "^0.5.7",
    "tailwindcss": "^3.0.23",
    "tslib": "^2.3.1",
    "typescript": "~4.5.4",
    "vitest": "^0.16.0"
  },
  "type": "module",
  "engines": {
    "node": ">= 16.0.0 <17.0.0",
    "npm": ">=8.0.0"
  }
}
