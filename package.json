{
  "name": "@forgerock/login-framework",
  "version": "0.0.1",
  "scripts": {
    "build": "npm run build:widget && npm run build:app",
    "build:app": "vite build",
    "build:dev:widget": "rollup -c",
    "build:dev:svelte-package": "svelte-package",
    "build:dev:types": "rollup -c ./rollup.types.config.js",
    "build:widget": "npm-run-all build:dev:*",
    "build:storybook": "storybook build --webpack-stats-json",
    "build:release": "npm-run-all build:release:*",
    "build:release:widget": "rollup -c",
    "build:release:package": "svelte-package",
    "build:release:types": "rollup -c ./rollup.types.config.js",
    "build:release:clean": "node ./.scripts/processTypes.mjs",
    "build:types": "npm run build:release:package & npm run build:release:types & npm run build:release:clean",
    "check": "npm run check:lint && npm run check:svelte",
    "check:lint": "prettier --ignore-path .gitignore -w --plugin-search-dir=. . && eslint --fix --ignore-path .gitignore .",
    "check:svelte": "svelte-check --tsconfig ./tsconfig.json --threshold=warning",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "chromatic": "chromatic --force-rebuild",
    "ci": "vitest --dir src",
    "ci:e2e": "playwright test",
    "ci:e2e:debug": "PWDEBUG=1 playwright test",
    "clean": "git clean -fdX -e \"!.env\"",
    "commit": "cz",
    "dev": "npm run build:widget && npm run dev:widget | npm run dev:app",
    "dev:app": "vite dev",
    "dev:style": "postcss --watch src/lib/widget/main.css --output package/widget.css",
    "dev:widget": "rollup -cw",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "package": "svelte-package",
    "prepare": "is-ci || husky install",
    "preview": "vite preview",
    "storybook": "storybook dev --no-open -p 6006",
    "test": "vitest --dir src",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:ui": "npm run build && playwright test --ui",
    "test:storybook": "test-storybook"
  },
  "dependencies": {
    "@forgerock/javascript-sdk": "beta",
    "@rockcarver/frodo-lib": "^2.0.0-60",
    "axios": "^1.6.7",
    "dotenv": "^16.4.1",
    "qrcode": "1.5.3",
    "xss": "1.0.14",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@hcaptcha/types": "^1.0.3",
    "@playwright/test": "^1.39.0",
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "9.2.1",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@storybook/addon-a11y": "^7.5.1",
    "@storybook/addon-actions": "^7.5.1",
    "@storybook/addon-essentials": "^7.5.1",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.1",
    "@storybook/addon-mdx-gfm": "^7.5.1",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/jest": "^0.2.3",
    "@storybook/svelte": "^7.5.3",
    "@storybook/sveltekit": "^7.5.2",
    "@storybook/test-runner": "^0.14.0",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/theming": "^7.5.2",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/adapter-node": "^1.2.3",
    "@sveltejs/kit": "1.27.1",
    "@sveltejs/package": "^1.0.2",
    "@sveltejs/vite-plugin-svelte": "^2.0.4",
    "@types/grecaptcha": "^3.0.5",
    "@types/qrcode": "1.5.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vitejs/plugin-basic-ssl": "^0.1.2",
    "@vitest/ui": "^0.34.6",
    "autoprefixer": "^10.4.17",
    "axe-playwright": "^1.2.3",
    "babel-loader": "^9.1.2",
    "chromatic": "^7.2.0",
    "color": "4.2.3",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "^29.4.2",
    "jest-playwright-preset": "^3.0.1",
    "lint-staged": "^15.0.2",
    "markdown-toc": "^1.2.0",
    "mdsvex": "0.11.0",
    "npm-run-all": "4.1.5",
    "playwright": "^1.38.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.0.0",
    "prettier": "3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark-autolink-headings": "^7.0.1",
    "remark-slug": "^7.0.1",
    "rimraf": "3.0.2",
    "rollup": "^4.4.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-license": "^3.0.1",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-styles": "^4.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "semantic-release-slack-bot": "3.5.3",
    "storybook": "^7.5.1",
    "storybook-addon-code-editor": "2.2.0",
    "storybook-dark-mode": "3.0.1",
    "svelte": "^3.55.1",
    "svelte-check": "^3.5.2",
    "svelte-dts": "^0.3.7",
    "svelte-loader": "^3.1.9",
    "svelte-preprocess": "^5.0.4",
    "svelte2tsx": "^0.6.22",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.5.0",
    "typescript": "^5.2.2",
    "uuid": "9.0.1",
    "vite": "^4.4.12",
    "vite-plugin-turbosnap": "^1.0.1",
    "vitest": "^0.34.6"
  },
  "svelte": "../widget/modal.svelte",
  "type": "module",
  "engines": {
    "node": ">=18.0.0 || ^20",
    "npm": ">=8.0.0"
  },
  "volta": {
    "node": "18.12.1"
  },
  "lint-staged": {
    "*.{js,svelte}": "eslint --cache --fix -c .eslintrc.cjs .",
    "*.{js,css,md,json}": "prettier --write --config .prettierrc",
    "*.svelte": "svelte-check --tsconfig ./tsconfig.json --threshold=warning"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerebrl/forgerock-web-login-framework.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
